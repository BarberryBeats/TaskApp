<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kg.geektech.lvl4lesson1.ui.home.HomeFragment"
        android:label="@string/title_home"

        tools:layout="@layout/fragment_home" >
        <action
            app:enterAnim="@anim/nav_default_enter_anim"
            android:id="@+id/action_navigation_home_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="kg.geektech.lvl4lesson1.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="kg.geektech.lvl4lesson1.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="kg.geektech.lvl4lesson1.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="kg.geektech.lvl4lesson1.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/boardFragment"
        android:name="kg.geektech.lvl4lesson1.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" />
    <fragment
        android:id="@+id/fragmentForOpenImage"
        android:name="kg.geektech.lvl4lesson1.FragmentForOpenImage"
        android:label="fragment_for_open_image"
        tools:layout="@layout/fragment_for_open_image" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="kg.geektech.lvl4lesson1.ui.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
</navigation>