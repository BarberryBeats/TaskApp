<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.LoginFragment">
  <ImageView
    android:id="@+id/imgGoogle"
      android:layout_width="150dp"
      android:layout_height="150dp"
    android:background="@drawable/logo_google"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="100dp"/>
  <TextView
      android:id="@+id/textSignIn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imgGoogle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Sign In"
    android:textSize="42sp"
    android:textStyle="bold"
    android:textColor="@color/dark_orange"/>
  <TextView
      android:id="@+id/textSignIn2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textSignIn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="Sign in with Google using Firebase!"
      android:layout_marginTop="8dp"
      android:textSize="18sp"
      android:textStyle="italic"
      android:textColor="@color/orange"/>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnGoogle"
      android:text="Sign in via Google"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textSignIn2"
      android:layout_marginTop="32dp"
      android:textSize="24sp"
      android:gravity="center"
      app:cornerRadius="30dp"
      android:backgroundTint="@color/orange"
      android:layout_marginHorizontal="64dp"
      app:layout_constraintStart_toStartOf="parent"/>
  <TextView
      android:id="@+id/google_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="46dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/btnGoogle"
      app:layout_constraintStart_toStartOf="parent"/>
  <TextView
      android:id="@+id/google_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="46dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@id/google_name"
      app:layout_constraintStart_toStartOf="parent"/>

  <Button
      android:id="@+id/btnLogout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/orange"
      android:text="LOGOUT"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>