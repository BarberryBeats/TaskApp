<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/constr"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/dark_orange">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/imageback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/roundImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:elevation="12dp"
        app:cardCornerRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/roundImageViewBody"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/avatar2"

            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/editphoto"
        android:fontFamily="@font/gropled_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roundImageView"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editNameInpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        app:boxBackgroundColor="@color/orange"
        app:hintTextColor="@color/orange"
        app:startIconDrawable="@drawable/ic_mail"
        app:layout_constraintTop_toBottomOf="@id/constr"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/orange">
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:backgroundTint="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editMailInpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        app:boxBackgroundColor="@color/orange"
        app:hintTextColor="@color/orange"
        app:startIconDrawable="@drawable/ic_mail"
        app:layout_constraintTop_toBottomOf="@id/editNameInpLayout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/orange">
        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:hint="Mail"
            android:backgroundTint="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editPhoneInpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        app:boxBackgroundColor="@color/orange"
        app:hintTextColor="@color/orange"
        app:startIconDrawable="@drawable/ic_baseline_phone_24"
        app:layout_constraintTop_toBottomOf="@id/editMailInpLayout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/orange">
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:backgroundTint="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editGenderInpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        app:boxBackgroundColor="@color/orange"
        app:hintTextColor="@color/orange"
        app:startIconDrawable="@drawable/ic_mail"
        app:layout_constraintTop_toBottomOf="@id/editPhoneInpLayout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/orange">
        <EditText
            android:id="@+id/editGender"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:backgroundTint="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editBirthdayInpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/orange"
        app:boxBackgroundColor="@color/orange"
        app:hintTextColor="@color/orange"
        app:startIconDrawable="@drawable/ic_mail"
        app:layout_constraintTop_toBottomOf="@id/editGenderInpLayout"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/orange">
        <EditText
            android:id="@+id/editBirthday"
            android:layout_width="match_parent"
            android:inputType="textCapSentences"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:backgroundTint="@color/gray"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text="LOGOUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>